	Dim nLen As Long

	nLen = Len(TEXT_POWERPLUS_WATERMARK_NAME)
	Set oEnum = _oDrawPage.createEnumeration()
	Do While oEnum.hasMoreElements()
		Set oGraphic = oEnum.nextElement()
